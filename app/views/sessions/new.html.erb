<h1>Reservation</h1>

<%= form_with url: login_path, class: "form" do |form| %>
  <div class="form-group">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :password, class: "form-label" %>
    <%= form.password_field :password, class: "form-input" %>
  </div>

  <%= form.submit "ログイン", class: "form-submit" %>
<% end %>
